<UserControl x:Class="Wpf_FussballZeug_2024_02_08.TeamControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Wpf_FussballZeug_2024_02_08"
             mc:Ignorable="d"
             d:DesignHeight="120*" d:DesignWidth="100">
    
    <Grid>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="75" />
            <RowDefinition Height="45*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100" />
        </Grid.ColumnDefinitions>
       
        <Border Grid.Row="0" Grid.RowSpan="2" BorderThickness="1" 
                BorderBrush="Black"  Margin="10" />
        
        <Image x:Name="logo" Grid.Row="0" Margin="10 15 10 0" HorizontalAlignment="Center"
               VerticalAlignment="Center"></Image>
        <TextBlock x:Name="lbl" Grid.Row="1" TextWrapping="Wrap" Margin="10 10 10 10" VerticalAlignment="Center" HorizontalAlignment="Center"></TextBlock>
        
    </Grid>
</UserControl>
